{
  "title": "Notation de projets rendus",
  "type": "object",
  "properties": {
    "énoncé-url": { "type": "string" },
    "date-rendu": { "type": "string" },
    "groupes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "nom": { "type": "string" },
          "questions-ouvertes": { "type": "string" },
          "repo-url": { "type": "string" },
          "prod-url": { "type": "string" },
          "tests-pct": { "type": "number" },
          "critère-fonct": {
            "title": "Critères fonctionnels",
            "type": "object",
            "properties": {
              "env-jwt-secret": { "type": "boolean" },
              "tout-asynchrone": { "type": "boolean" },
              "last-updated-at": { "type": "boolean" },
              "nom-bdd": { "type": "boolean" },
              "urls-endpoints": { "type": "boolean" },
              "format-réponses": { "type": "boolean" },
              "token-en-base64": { "type": "boolean" },
              "env-mongo-uri": { "type": "boolean" }
            },
            "minProperties": 8,
            "maxProperties": 8,
            "additionalProperties": false
          },
          "critère-lisib": {
            "type": "object",
            "properties": {
              "erreurs-eslint": { "type": "number" },
              "warnings-eslint": { "type": "number" },
              "pas-duplication-code": { "type": "boolean" },
              "pas-fichiers-inutiles": { "type": "boolean" },
              "readme-install": { "type": "boolean" },
              "tests-fournis": { "type": "boolean" }
            },
            "minProperties": 6,
            "maxProperties": 6,
            "additionalProperties": false
          },
          "critère-prod": {
            "type": "boolean"
          },
          "critère-collab": {
            "type": "object",
            "properties": {
              "tous-contribué": { "type": "boolean" },
              "équilibre": { "type": "boolean" }
            },
            "minProperties": 2,
            "maxProperties": 2,
            "additionalProperties": false
          }
        },
        "required": ["nom"],
        "additionalProperties": false
      }
    }
  },
  "required": ["groupes"],
  "additionalProperties": false
}
